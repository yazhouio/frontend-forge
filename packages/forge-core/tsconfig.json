{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@frontend-forge/code-export": ["../code-export"],
      "@frontend-forge/code-export/*": ["../code-export/*"],
      "@frontend-forge/component-generator": ["../component-generator/src/index.ts"],
      "@frontend-forge/component-generator/*": ["../component-generator/src/*"],
      "@frontend-forge/project-generator": ["../project-generator"],
      "@frontend-forge/project-generator/*": ["../project-generator/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../code-export" },
    { "path": "../component-generator" },
    { "path": "../project-generator" }
  ]
}
