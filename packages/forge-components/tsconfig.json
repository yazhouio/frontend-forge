{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "jsx": "react",
    "types": ["node", "react", "react-dom"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": true
  },
  "include": ["src/**/*"]
}
