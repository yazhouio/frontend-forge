{
  "version": "1.0",
  "dataSources": [
    {
      "id": "users",
      "type": "http",
      "config": {
        "url": "/api/users"
      }
    }
  ],
  "root": {
    "id": "page",
    "type": "Page",
    "props": {},
    "children": [
      {
        "id": "layout1",
        "type": "Layout",
        "props": {
          "direction": "column"
        },
        "children": [
          {
            "id": "title1",
            "type": "Text",
            "props": {
              "text": "User List"
            }
          },
          {
            "id": "input1",
            "type": "Input",
            "props": {
              "placeholder": "Enter name"
            }
          },
          {
            "id": "btn1",
            "type": "Button",
            "props": {
              "label": "Add User"
            }
          },
          {
            "id": "list1",
            "type": "UserList",
            "dataSourceId": "users",
            "props": {
              "data": "{{ dataSource.data }}",
              "loading": "{{ dataSource.isLoading }}"
            }
          }
        ]
      }
    ]
  }
}