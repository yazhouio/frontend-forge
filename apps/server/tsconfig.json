{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@frontend-forge/project-generator": ["../packages/project-generator/src/index.ts"],
      "@frontend-forge/project-generator/*": ["../packages/project-generator/src/*"],
      "@frontend-forge/code-export": ["../packages/code-export/src/index.ts"],
      "@frontend-forge/code-export/*": ["../packages/code-export/src/*"]
    }
  },
  "include": ["src/**/*"]
}
