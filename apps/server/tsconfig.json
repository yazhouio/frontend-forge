{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@frontend-forge/forge-core": ["../../packages/forge-core/dist/index.d.ts"],
      "@frontend-forge/forge-core/*": ["../../packages/forge-core/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../../packages/forge-core" }
  ]
}
